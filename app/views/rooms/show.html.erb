<div class="contents room-show">  
    <h2>施設詳細</h2>

    <table>
      <tr>
        <% if @room.room_image.attached? %>
          <%= image_tag @room.room_image.variant(resize: '180x300'), class: 'room_image', alt: '施設画像'%>
        <% else %>
          <%= image_tag 'default_room.png', class: 'room_image', alt: '施設画像' %>
        <% end %>
      </tr>
      <tr>
        <th>施設名</th>
        <td><%= @room.name %></td>
      </tr>
      <tr>
        <th>料金</th>
        <td><%= @room.fee %>円〜</td>
      </tr>
      <tr>
        <th>所在地</th>
        <td><%= @room.address %></td>
      </tr>

      <tr>
        <th>紹介</th>
        <td><%= @room.introduction%></td>
      </tr>
    <% if @user %>
        <td><%= link_to "予約はこちら", new_reservation_path, class: "button" %></td>
      <% else %>
        <td><%= link_to "ログインはこちら", new_user_session_path, class: "button" %></td>
      <% end %>
      <% if @room.user_id == current_user.id %>
        <td><%= link_to "編集", edit_room_path(@room.id), class: "button" %></td>
        <td><%= link_to "削除", room_path(@room.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "button" %></td>
      <% end %>
      <td><%= link_to "←戻る", :back, class: "button" %></td>
  </table>
</div>
