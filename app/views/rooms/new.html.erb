<h1>施設登録</h1>

<%= form_with model: @room do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"施設名" %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :fee ,"料金(/1泊)" %></th>
      <td><%= f.text_field :fee %></td>
    </tr>
    <tr>
      <th><%= f.label :address ,"所在地" %></th>
      <td><%= f.text_field :address %></td>
    </tr>

    <tr>
      <th><%= f.label :introduction ,"紹介文" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "戻る", rooms_path %></li>
    </ul>
  </div>
<% end %>
