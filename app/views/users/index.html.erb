<div class="contents rooms">
  <h2>施設一覧</h2>
  <table>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td>
            <% if room.room_image.attached? %>
                <%= image_tag room.room_image.variant(resize: '180x300'), class: 'room_image', alt: '施設画像'%>
            <% else %>
                <%= image_tag 'default_room.png', class: 'room_image', alt: '施設画像' %>
            <% end %>
          </td>
          <td><%= link_to room.name, room_path(room) %></td>
          <td><%= room.fee %>円〜</td>
          <td><%= room.address %></td>
          <td><%= room.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</div>
