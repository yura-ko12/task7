<div class="contents">
  <h2>プロフィール編集</h2>

  <%= form_with model: @user do |f| %>
    <table>
      <tr>
        <th><%= f.label :image ,"アイコン画像" %></th>
        <td><%= f.file_field :image %></td>
      </tr>
      <tr>
        <th><%= f.label :name ,"名前" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th><%= f.label :introduction ,"自己紹介" %></th>
        <td><%= f.text_area :introduction %></td>
      </tr>
    </table>

    <div>
      <ul>
        <li><%= f.submit "登録完了する", class: "button" %></li>
        <li><%= link_to "←戻る", "/users/#{current_user.id}", class: "button" %></li>
      </ul>
    </div>
  <% end %>
</div>
